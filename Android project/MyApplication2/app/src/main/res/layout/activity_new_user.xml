
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".NewDeviceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新規ユーザ登録"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:hint="ユーザ名を入力"
        android:inputType="text" />

    <EditText
        android:id="@+id/userGradeEditText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:hint="学年を入力"
        android:inputType="text" />

    <EditText
        android:id="@+id/userContactEditText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:hint="連絡先を入力"
        android:inputType="text" />

    <CheckBox
        android:id="@+id/isAdminCheckBox"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:hint="管理者はチェック"
        android:inputType="text"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登録してQRコードを作成"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="デバイス名を入力して登録ボタンを押してください"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/printButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="QRコードを印刷" />

</LinearLayout>
